/* color */
$main-color = #eef
$base-color = #223
$accent-color = #369
/* font */
$gothic-font-family = "ヒラギノ角ゴ ProN W3", "Hiragino Kaku Gothic ProN W3", HiraKakuProN-W3, "ヒラギノ角ゴ ProN", "Hiragino Kaku Gothic ProN", "ヒラギノ角ゴ Pro", "Hiragino Kaku Gothic Pro", "游ゴシック", "Yu Gothic,", YuGothic, Osaka, "メイリオ", Meiryo, "ＭＳ Ｐゴシック", "MS PGothic", sans-serif
$mincho-font-family = "ヒラギノ明朝 ProN W3", "Hiragino Mincho ProN W3", HiraMinProN-W3, "ヒラギノ明朝 ProN", "Hiragino Mincho ProN", "ヒラギノ明朝 Pro", "Hiragino Mincho Pro", "游明朝", "Yu Mincho", YuMincho, "HGS明朝E", "ＭＳ Ｐ明朝", "MS PMincho", serif
/* rendering */
$font-smoothing = antialiased
$text-rendering = auto
/* base */
$base-line-height = 1
$base-font-family = $gothic-font-family
$base-font-size-pc = 16px
$base-font-size-sp = 14px
$base-font-color = $main-color
$base-placeholder-color = #989aaf
$base-background-color = $base-color
/* selection */
$selection-background-color = $main-color
$selection-color = $base-color
/* break point */
$break-point-sp = 375px
$break-point-tb = 768px
$break-point-pc = 1024px
